extends adminlayout

block content
  .top-margin
  != messages()
  #addpost-container
   h2.header-margin Add a Category 
   hr 
   ul.errors
    if errors
     each error, i in errors
      li #{error.msg}
   form#add-category(method='post', action='/admin/addcategory')
     label Category Name:
     input(name='name', type='text')
     input(name='submit',type='submit',value='Add')
   br
   br
   h2.header-margin Delete Category
   hr
   table#category-table
    thead
     tr
       th Categories
     if categories
      each category, i in categories
       tr 
        td.td-categ-name #{category.name}
        td
         form.delete-category(method='post' action='/admin/delcategory')
          input(name='categoryid', type='hidden', value='#{category._id}')
          input.delete-btn(type='submit', id='delcategory', name='delcategory', value="Delete")
       
   br
   br
  include footer