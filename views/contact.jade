if loggedIn
 include userlayout
else
 include layout

block content

 .top-margin
 != messages()
 if errors
     ul.errors
      each error, i in errors
       li.alert.alert-danger #{error.msg}
 h1.header-margin Contact Me
 hr
 form#contact(method='post', action='/contact/send')
   label Name:
   input(type='text', name='name', maxlength="24")
   label E-mail*:
   input(type='text', name='email', maxlength="32")
   p#email-info *Your email will not be shared with anyone.
   label(for='body') Message:
   textarea(type='text', name='message', maxlength="750")
   input(type='submit', value='Send')
  br

 include footer